modules = ["nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["unzip"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ElectionCaffe"

[[workflows.workflow]]
name = "ElectionCaffe"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace/apps/web && npm run dev"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["node", "index.js"]

[userenv]

[userenv.shared]
CORE_DATABASE_URL = "${DATABASE_URL}"
TENANT_DATABASE_URL = "${DATABASE_URL}"
JWT_SECRET = "electioncaffe-jwt-secret-key-production-ready-32chars"
JWT_REFRESH_SECRET = "electioncaffe-refresh-secret-key-production-ready-32"
GATEWAY_PORT = "3000"
AUTH_PORT = "3001"
ELECTION_PORT = "3002"
VOTER_PORT = "3003"
CADRE_PORT = "3004"
ANALYTICS_PORT = "3005"
REPORTING_PORT = "3006"
AI_ANALYTICS_PORT = "3007"
WEB_PORT = "5000"
CORS_ORIGIN = "*"
LOG_LEVEL = "info"
STORAGE_TYPE = "local"
STORAGE_PATH = "./uploads"
NODE_ENV = "development"
